# 서버 설정
NODE_ENV=development
PORT=3000
API_VERSION=v1

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=suittrip
DB_CONNECTION_LIMIT=10

# JWT 설정
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this
REFRESH_TOKEN_EXPIRES_IN=30d

# Toss Payments 설정
TOSS_CLIENT_KEY=your_toss_client_key
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_API_URL=https://api.tosspayments.com

# Kakao API 설정
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_ADDRESS_SEARCH_URL=https://dapi.kakao.com/v2/local/search/address.json
KAKAO_GEOCODING_URL=https://dapi.kakao.com/v2/local/geo

# 사업자 등록번호 검증 API
BUSINESS_VERIFY_API_URL=https://api.odcloud.kr/api/nts-businessman/v1/status
BUSINESS_VERIFY_API_KEY=your_business_verify_api_key

# 이메일 설정
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=Suittrip <noreply@suittrip.com>

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# CORS 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 로깅
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# 테스트 데이터베이스 (테스트용)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_USER=root
TEST_DB_PASSWORD=your_password
TEST_DB_NAME=suittrip_test
